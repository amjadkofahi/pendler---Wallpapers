                                        <StackPanel>
                                            <Windows10FallCreatorsUpdate:ColorPicker x:ConnectionId='65' IsColorPreviewVisible="False" ColorSpectrumShape="Ring" IsColorSliderVisible="True" IsColorChannelTextInputVisible="False" IsHexInputVisible="False" IsAlphaEnabled="False" IsAlphaSliderVisible="True" IsAlphaTextInputVisible="True"                                      x:Name="AcentGradient2Picker"/>
